<a
  href={{@repo.htmlUrl}}
  target="_blank"
  class="repository-item block p-4 border rounded-md shadow-md bg-blue-600 text-decoration-none hover:bg-blue-700"
  rel="noopener noreferrer"
  ...attributes
>
  <div class="flex justify-between items-center mb-2">
    <span
      class="font-semibold text-white text-shadow text-xl"
      data-test-repo-name
    >
      {{@repo.name}}
    </span>
    <span class="ml-4 text-sm font-medium text-white text-shadow">
      {{#if @repo.private}}
        🔒 Private
      {{else}}
        🌍 Public
      {{/if}}
    </span>
  </div>

  <div class="text-white text-shadow">
    <p><strong>Language:</strong> {{@repo.language}}</p>
    {{yield}}
  </div>
</a>